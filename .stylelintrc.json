{
  "ignoreFiles": ["**/*"],
  "overrides": [
    {
      "files": ["**/*.css"],
      "extends": ["stylelint-config-standard"],
      "rules": {}
    },
    {
      "files": ["**/*.scss"],
      "customSyntax": "postcss-scss",
      "extends": ["stylelint-config-standard-scss"],
      "rules": {}
    }
  ],
  "rules": {
    "selector-type-no-unknown": [
      true,
      {
        "ignore": ["custom-elements", "default-namespace"]
      }
    ]
  }
}
