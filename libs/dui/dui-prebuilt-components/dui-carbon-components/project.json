{
  "name": "dui-carbon-components",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/dui/dui-prebuilt-components/dui-carbon-components/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": ["scope:dui-extensions"],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/dui/dui-prebuilt-components/dui-carbon-components/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/dui/dui-prebuilt-components/dui-carbon-components/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/dui/dui-prebuilt-components/dui-carbon-components/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/dui/dui-prebuilt-components/dui-carbon-components/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/dui/dui-prebuilt-components/dui-carbon-components/**/*.{ts,tsx,js,jsx}",
          "libs/dui/dui-prebuilt-components/dui-carbon-components/package.json"
        ]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc -p tsconfig.lib.json --noEmit"],
        "cwd": "libs/dui/dui-prebuilt-components/dui-carbon-components"
      }
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/dui/dui-prebuilt-components/dui-carbon-components/**/*.css",
          "libs/dui/dui-prebuilt-components/dui-carbon-components/**/*.scss"
        ]
      }
    }
  }
}
