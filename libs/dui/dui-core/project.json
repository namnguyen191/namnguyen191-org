{
  "name": "dui-core",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/dui/dui-core/src",
  "prefix": "namnguyen191",
  "projectType": "library",
  "tags": ["scope:dui-core"],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/dui/dui-core/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/dui/dui-core/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/dui/dui-core/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/dui/dui-core/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/dui/dui-core/**/*.{ts,tsx,js,jsx}",
          "libs/dui/dui-core/package.json"
        ]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc -p tsconfig.lib.json --noEmit"],
        "cwd": "libs/dui/dui-core"
      }
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/dui/dui-core/**/*.css", "libs/dui/dui-core/**/*.scss"]
      }
    },
    "generate-json-schema": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsx scripts/dui-gen-json-schem.ts libs/dui/dui-core libs/dui/dui-core/tsconfig.lib.json"
        ]
      }
    }
  }
}
