{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ESNext",
    "module": "esnext",
    "lib": ["es2020", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "paths": {
      "@namnguyen191/dui": ["libs/dui/src/index.ts"],
      "@namnguyen191/dui/prebuilt-components": ["libs/dui/prebuilt-components/src/index.ts"],
      "@namnguyen191/mui-components": [
        "libs/shared/dui-prebuilt-components/mui-components/src/index.ts"
      ],
      "@namnguyen191/types-helper": ["libs/shared/types-helper/src/index.ts"],
      "@namnguyen191/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
