{
  "extends": [".eslintrc.json", "plugin:@nx/react"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "extends": ["airbnb-typescript"],
      "rules": {
        "@typescript-eslint/indent": "off",
        "comma-dangle": "off",
        "@typescript-eslint/comma-dangle": "off",
        "@typescript-eslint/naming-convention": "off"
      }
    }
  ]
}
