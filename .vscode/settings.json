{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSaveMode": "file",
  "editor.formatOnSave": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 10000,
  "editor.codeActionsOnSave": {
    "source.fixAll": "never"
  },
  "angular.enable-strict-mode-prompt": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.preferences.importModuleSpecifier": "relative",
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/.angular": true,
    "**/.nx": true,
    "**/tmp": true,
    "**/_": true
  },
  "json.schemas": [
    {
      "fileMatch": ["**/*.LAYOUT_TEMPLATE.json"],
      "url": "./libs/dj-ui/core/generated-json-schemas/LayoutTemplateSchema.json"
    },
    {
      "fileMatch": ["**/*.REMOTE_RESOURCE_TEMPLATE.json"],
      "url": "./libs/dj-ui/core/generated-json-schemas/RemoteResourceTemplateSchema.json"
    },
    {
      "fileMatch": ["**/*.carousel-card.json"],
      "url": "./libs/dj-ui/prebuilt-components/carbon/generated-json-schemas/CarbonCarouselCardSchema.json"
    }
  ]
}
